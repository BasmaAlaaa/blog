<h1>Edit Blog</h1>

<%= form_with model: @blog_post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= button_to 'Delete', blog_post_path(@blog_post), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
